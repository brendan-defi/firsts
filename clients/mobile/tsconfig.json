{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "target": "ES2016",
        "sourceMap": true,
        "outDir": "./dist",
        "removeComments": true,
        "noEmitOnError": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "strict": true
    },
    "include": ["**/*.ts", "**/*.tsx"]
}
